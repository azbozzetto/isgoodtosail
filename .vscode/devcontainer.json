{
    "name": "Your Dev Container",
    "image": "your-image",  // Or use "dockerFile": "Dockerfile" to build your container
    "appPort": [
        "8080:8080"
    ],
    "forwardPorts": [
        8080
    ],
    "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python"
    ],
    "postCreateCommand": "echo 'Container ready!'",
    "remoteUser": "root",
    "workspaceFolder": "/workspace",
    "portAttributes": {
        "8080": {
            "label": "web app",
            "onAutoForward": "openPreview"
        }
    },
    "customizations": {
        "vscode": {
            "configuration": {
                "remote.containers.forwardPorts": [8080],
                "remote.containers.portsAttributes": {
                    "8080": {
                        "label": "Web Server",
                        "onAutoForward": "notifyAndOpenBrowser",
                        "public": true,
                        "protocol": "https"
                    }
                }
            }
        }
    }
}
